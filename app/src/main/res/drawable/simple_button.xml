<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android" >
    <item android:state_pressed="true" >
        <shape>
            <solid
                android:color="#dbdbdb" />
            <stroke
                android:width="1dp"
                android:color="#8c8c8c" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="4dp"
                android:top="4dp"
                android:right="4dp"
                android:bottom="4dp" />
        </shape>
    </item>
    <item>
        <shape>
            <stroke
                android:width="1dp"
                android:color="#8c8c8c" />
            <corners
                android:radius="2dp" />
            <padding
                android:left="4dp"
                android:top="0dp"
                android:right="4dp"
                android:bottom="0dp" />
       </shape>
    </item>
  </selector>
